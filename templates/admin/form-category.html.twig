{% extends 'admin/base.html.twig' %}


{% block main %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-category-title-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-article-description-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>
    {{ form_end(form) }}
{% endblock %}