<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset("assets/css/style.css") }}">
        {% block title %}
            <title>Document</title>
        {% endblock %}
    </head>
    <body>
        <header>
            <img class="header-logo" src="{{ asset("assets/img/1.png") }}" alt="head-logo">
            <nav>
                <a href="{{ path('home') }}">Accueil</a>
                <a href="{{ path('articles-page') }}">Articles</a>
                <a href="{{ path('admin-categories') }}">Catégories</a>
                <a href="{{ path('telescop-page')}}">Téléscope GJR-KING</a>
                <a href="{{ path('project-page') }}">Projet DS-1</a>
                <a href="{{ path('app_login') }}">Connexion</a>
                <a href="{{ path('app_logout') }}">Deconnexion</a>
            </nav>
            <button type="button" aria-label="toggle curtain navigation" class="nav-toggler">
                <span class="line l1"></span>
                <span class="line l2"></span>
                <span class="line l3"></span>
            </button>
            <section class="toolbar">
                {% if app.user %}
                    <p class="pseudo"> Bonjour {{ app.user.name }}</p>
                {% endif %}
                <form class="searchbar" method="get" action="{{ path('articles-search') }}">
                    <input class="searchbar" type="text" name="search">
                    <input class="button-box" type="submit">
                </form>
            </section>
        </header>
        <main>

            {% block main %}

            {% endblock %}

        </main>
        <footer>

        </footer>
        <script src="{{ asset('assets/js/script.js') }}"></script>
    </body>
</html>
