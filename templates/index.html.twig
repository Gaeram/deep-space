{% extends 'base.html.twig' %}

{% block title %}
    <title>Page d'accueil</title>
{% endblock %}

{% block main %}

{% include ('preheader.html.twig') %}

    <section class="presentation-box">
        <h2 class="section-title">EXPLORER</h2>
        <div class="boxes">
            <div class="box">
                <h3>LE PROJET DEEP SPACE DS-1</h3>
                <a class="button-box" href="{{ path('project-page') }}">En savoir +</a>
            </div>
            <div class="semi-boxes">
                <div class="second-box">
                    <h3>TOUTES NOS PUBLICATIONS</h3>
                    <a class="button-boxes" href="{{ path('articles-page') }}">En savoir +</a>
                </div>

                <div class="third-box">
                    <h3>TELESCOPE GJR-KING</h3>
                    <a class="button-boxes" href="{{ path('telescop-page') }}">En savoir +</a>
                </div>
            </div>
        </div>
    </section>
    <h2 class="section-title">NOS DERNIERS ARTICLES</h2>

    <section class="articles-box">

        {% for article in lastArticles %}
        <article class="list">
            <img class="list-img" src="{{asset('uploads/images/'~ article.image)}}" alt="{{ article.title }}">
            <h2>{{ article.title }}</h2>
            <p class="subtitle"> Ã©crit par {{ article.author }}</p>
            <p class="subtitle">{{ article.category.title }}</p>
            <p class="description">{{ article.description }}</p>
            <a class="button-boxes" href="{{ path('article-page', {'id': article.id}) }}">Lire <span class="chevron">></span></a>
        </article>
        {% endfor %}
    </section>
{% endblock %}